{
    "name": "leuverink/eloquent-hashid-binding",
    "description": "A drop in solution for eloquent route model binding with hashid's",
    "minimum-stability": "stable",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Willem Leuverink",
            "email": "willem@leuver.ink",
            "homepage": "https://leuver.ink",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Leuverink\\HashidBinding\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leuverink\\HashidBinding\\Tests\\": "tests/"
        }
    },
    "require": {
        "illuminate/support": "5.5.* || 5.6.* || 5.7.* || 5.8.* || 6.* || 7.* || 8.* || 9.* || 10.* || 11.*",
        "hashids/hashids": "^4.0 | ^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "orchestra/testbench": "^3.8",
        "codedungeon/phpunit-result-printer": "^0.26.2"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Leuverink\\HashidBinding\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test-coverage": "./vendor/bin/phpunit --coverage-html build/reports"
    }
}
